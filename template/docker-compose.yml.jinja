version: "3.9"

services:
  # Container definition for the devcontainer
  devcontainer:
    build:
      context: .
      target: dev{% if use_private_package_repository %}
      secrets:
        - poetry-auth
    secrets:
      - poetry-auth{% endif %}
    stdin_open: true
    tty: true{% if use_app %}
    ports:
      - "8000:8000"{% endif %}
    volumes:
      - .:/workspaces/{{ package_slug }}/
{% if use_app %}
  # Container definition for running the FastAPI app in production
  app:
    build:
      context: .
      target: app{% if use_private_package_repository %}
      secrets:
        - poetry-auth{% endif %}
    tty: true
    ports:
      - "8000:8000"
    expose:
      - 8000
    volumes:
      - .:/workspaces/{{ package_slug }}/
    command: ["serve", "--dev"]
{% endif %}{% if use_private_package_repository %}
secrets:
  poetry-auth:
    # See README.md to configure auth.toml
    file: "${POETRY_AUTH_TOML_PATH:-~/.config/pypoetry/auth.toml}"
 {% endif %}
networks:
  default:
    name: {{ package_slug }}-network
